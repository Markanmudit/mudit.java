   package com.company;

public class arrays {
    public static void main(String[] args){
       int[] marks={98 ,45 ,79 ,99 ,80};
        System.out.println("printing using for loop");
        for(int i=marks.length -1;i>=0;i--){
            System.out.println(marks[i]);
        }

    }
}

