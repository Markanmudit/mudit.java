//                                                       INTRODUCTION 


package com.company;

public class arrays {
    public static void main(String[] args){
        int[] marks = new int[5];
        marks[0]=100;
        marks[1]=50;
        marks[2]=60;
        marks[3]=90;
        marks[4]=95;
        System.out.println(marks[4]);
    }
}


