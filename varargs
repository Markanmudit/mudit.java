package com.company;

public class vargss {
    static int sum(int...arr){
        int result =0;
        for (int a:arr){
            result +=a;
        }
        return result;

        }
        public static void main(String[] args){
        System.out.println("welcome");
        System.out.println("the sum of 4 and 5" +sum(4,5));
        System.out.println("the sum of 4,3,5:"+sum(4,3,5));
        }
    }

