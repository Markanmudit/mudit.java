package com.company;

import java.util.Scanner;

public class switchcase {
    public static void main(String[] args){
//        int age;
        Scanner sc = new Scanner(System.in);
        int age = sc.nextInt();

        switch(age){
            case 18:
                System.out.println("you are going to be adult");
                break;
            case 23:
                System.out.println("you are going to get job");
                break;
            case 60:
                System.out.println("you are going get retired");
                break;
            default:
                System.out.println("enjoy youe life");
        }
    }
}

//                TO CCHECK WHETHER THE PERSON IS PASSED FOR FAILED 


                 



byte m1,m2,m3;
       Scanner sc = new Scanner(System.in);
       System.out.println("enter the marks for physics ");
       m1 =sc.nextByte();
       
       System.out.println("enter the marks for english ");
       m2 =sc.nextByte();
       
       System.out.println("enter the marks for maths ");
       m3=sc.nextByte();
       
       float avg = m1+m2+m3/3.0f;
       if(avg>=40 && m1>33 && m2>33 && m3>33){
           System.out.println("congo , you have been promoted ");
       }
       else{
           System.out.println("sorry , try again");
           
       }
